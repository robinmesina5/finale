<p id="notice"><%= notice %></p>

<h1>Listing Relatives</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Tree</th>
      <th>Address</th>
      <th>Age</th>
      <th>Birthday</th>
      <th>Date of death</th>
      <th>Father</th>
      <th>Mother</th>
      <th>Children</th>
      <th>Occupation</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @relatives.each do |relative| %>
      <tr>
        <td><%= relative.first_name %></td>
        <td><%= relative.last_name %></td>
        <td><%= relative.tree_id %></td>
        <td><%= relative.address %></td>
        <td><%= relative.age %></td>
        <td><%= relative.birthday %></td>
        <td><%= relative.date_of_death %></td>
        <td><%= relative.father %></td>
        <td><%= relative.mother %></td>
        <td><%= relative.children %></td>
        <td><%= relative.occupation %></td>
        <td><%= relative.user_id %></td>
        <td><%= link_to 'Show', relative %></td>
        <td><%= link_to 'Edit', edit_relative_path(relative) %></td>
        <td><%= link_to 'Destroy', relative, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

