<p id="notice"><%= notice %></p>

<h1>Listing Tree Roles</h1>

<table>
  <thead>
    <tr>
      <th>Family</th>
      <th>User</th>
      <th>Role</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tree_roles.each do |tree_role| %>
      <tr>
        <td><%= tree_role.family_id %></td>
        <td><%= tree_role.user_id %></td>
        <td><%= tree_role.role %></td>
        <td><%= link_to 'Show', tree_role %></td>
        <td><%= link_to 'Edit', edit_tree_role_path(tree_role) %></td>
        <td><%= link_to 'Destroy', tree_role, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

